<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
    version="1.2">
    
    <managed-bean>
    	<managed-bean-name>login</managed-bean-name>
    	<managed-bean-class>mx.com.everis.beans.LoginBean</managed-bean-class>
    	<managed-bean-scope>session</managed-bean-scope>    	
    </managed-bean>
    
    <managed-bean>
    	<managed-bean-name>registro</managed-bean-name>
    	<managed-bean-class>mx.com.everis.beans.RegistroUsuarioBean</managed-bean-class>
    	<managed-bean-scope>request</managed-bean-scope>    	
    </managed-bean>
    
    <navigation-rule>
    	<from-view-id>/registro.jsp</from-view-id>
    	<navigation-case>
    		<from-outcome>exito</from-outcome>
    		<to-view-id>/login.jsp</to-view-id>
    	</navigation-case>    	
    </navigation-rule>
    
    <navigation-rule>
    	<from-view-id>/login.jsp</from-view-id>
    	<navigation-case>
    		<from-outcome>registrar</from-outcome>
    		<to-view-id>/registro.jsp</to-view-id>
    	</navigation-case>
    	<navigation-case>
    		<from-outcome>exito</from-outcome>
    		<to-view-id>/exito.jsp</to-view-id>
    	</navigation-case>
    	<navigation-case>
    		<from-outcome>error</from-outcome>
    		<to-view-id>/error.jsp</to-view-id>
    	</navigation-case>
    </navigation-rule>
    
</faces-config>
